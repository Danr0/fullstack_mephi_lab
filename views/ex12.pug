extends layout

block content
    div.text-center
        form(class="form-signin" method="POST" action="/api/Pogonin/lab1/ex12")
            #error
                if error
                    p.text-danger Error!!!

            - var h1Classes = ['h3', 'mb-3', 'font-weight-normal']
            h1(class=h1Classes) Parse by char

            //-input email
            label( for="str" class="sr-only") Array
            input(type="str" name="str" id="str" class="form-control" placeholder="String" required autofocus)

            label( for="ch1" class="sr-only") Array
            input(type="ch1" name="ch1" id="ch1" class="form-control" placeholder="Char" required)

            //-signIn button
            - var buttonClass=['btn', 'btn-lg', 'btn-primary', 'btn-block'];
            button(class=buttonClass type="submit") Run

