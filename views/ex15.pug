extends layout

block content
    div.text-center
        form(class="form-signin" method="POST" action="/api/Pogonin/lab1/ex15")
            #error
                if error
                    p.text-danger Error!!!

            - var h1Classes = ['h3', 'mb-3', 'font-weight-normal']
            h1(class=h1Classes) Validate email

            //-input email
            label( for="mail" class="sr-only") Array
            input(type="mail" name="mail" id="mail" class="form-control" placeholder="Mail" required autofocus)

            //-signIn button
            - var buttonClass=['btn', 'btn-lg', 'btn-primary', 'btn-block'];
            button(class=buttonClass type="submit") Run


